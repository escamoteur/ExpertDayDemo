<?xml version="1.0" encoding="UTF-8"?>
<xamForms:ReactiveViewCell x:TypeArguments="expertDayDemo:CityWeatherItemViewModel" xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamForms="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
             xmlns:expertDayDemo="clr-namespace:ExpertDayDemo;assembly=ExpertDayDemo"

             x:Class="ExpertDayDemo.CityWeatherItemView">
 <Grid>   
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width ="1*"/>
        <ColumnDefinition Width ="2*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Image  x:Name="WeatherIcon" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" />
    <Label  x:Name="CityName" FontSize="Large" Grid.Column="1" Grid.Row="0"/>
    <Label  x:Name="Temperature" Grid.Column="1" Grid.Row="1"/>
 </Grid>
</xamForms:ReactiveViewCell>